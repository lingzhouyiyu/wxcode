<view class='container'>
  <view class='zhinan'>邀请指南</view>
  <view class='tips'>长按图片保存到相册</view>
  <view class='canvas-box {{hide?"hide":""}}' bindlongtap='saveImg'>
    <canvas canvas-id="myCanvas" style="width:100%;height:{{windowHeight*0.65}}px;"></canvas>
  </view>
  <view class="canvas-boxs">
    <image src='{{imgurl}}'bindtap="previewImage" class='shareimgs' style="width:100%;height:{{windowHeight*0.65}}px;" bindlongtap='saveImg'></image>
  </view>

  <view class='countview'>
    <text>您已成功邀请{{shareCount}}位好友加入蛙涡</text>
    <image src='../../images/yaoqing.png'></image>
  </view>
  <button class='yaoqing' open-type='share'>立即邀请</button>
</view>
<!-- "disableScroll": true -->