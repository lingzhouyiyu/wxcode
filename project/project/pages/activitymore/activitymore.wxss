.container{
  padding: 25rpx 25rpx 35rpx 25rpx;
  
  background-color: #f7f7f6;
}

.activitymore_item {
  width: 100%;
  height: auto;

  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 25rpx;
}

.activitymore_time {
  background-color: #e2e0dd;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 15px;
  padding: 0 20rpx 0 20rpx;
  font-size: 15px;
  color: #fff;

}

.activitymore_content {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 94%;
  height: auto;
  background-color: #fff;
  margin-top: 35rpx;
    border-radius: 10px;
}

.activitymore_content_img {
  width: 100%;
  height: 380rpx;
  border-top-left-radius: 10px;
   border-top-right-radius: 10px;
}

.activitymore_content_title {
  font-size: 18px;
  margin-top: 35rpx;
  margin-bottom: 20rpx;
  margin-left: 25rpx;
}

.activitymore_content_detail {
  font-size: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-bottom: 35rpx;  margin-left: 25rpx;
}
