.closeBtns{
  width: 80%;
  height: 90rpx;
  /* background-color: yellow; */
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
  margin-top: 30rpx;
  border-radius: 5px;
  border: 3rpx solid #F3F2F0;
  color: #91918C;
  font-size: 30rpx;
}
.closeBtn{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 50rpx;
  top: -30rpx;
  z-index: 9999;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.closeBtn image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.hideview{
  display: none;
