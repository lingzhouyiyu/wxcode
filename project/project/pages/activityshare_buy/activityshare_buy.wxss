/* 预约金说明弹框 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background:rgb(90, 90, 90);
  z-index: 9000;
  opacity: 0.7;
}
 
.modalDlg {
  width: 540rpx;
  height: auto;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 100rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0rpx 0 20rpx;
}
 

 
.save_money {
