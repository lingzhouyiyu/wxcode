.servicetop {
  width: 100%;
  height: 100rpx;
  border-bottom: 3rpx solid #f3f2f0;
  display: flex;
  position: fixed;
  top: 0;
  background-color: #fff;
  z-index: 999;
}

.topitem {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 100%;
  font-weight: bold;
  font-size: 30rpx;
}

.servicecontent {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin-top: 100rpx;
    height: 1000rpx;
}

.choushabi {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 40rpx;
  /* background-color: red; */
}

.toptxt {
  width: 94%;
  height: 70rpx;
  /* background-color: red; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.leftline {
  width: 37%;
  border: 3rpx dashed #76746f;
}

.centertxt {
  width: 26%;
  height: 100%;
  /* background-color: yellow; */
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.rightline {
  width: 37%;
  border: 3rpx dashed #76746f;
}

.content_title {
  width: 92%;
  height: 50rpx;
  font-size: 34rpx;
  display: flex;
  /* background-color: red; */
  align-items: center;
}

.content_title_line {
  width: 7rpx;
  height: 60%;
  background-color: #00aefe;
  margin-right: 15rpx;
  margin-top: 8rpx;
}

.content_detial {
  width: 92%;
  height: auto;
  word-break: break-all;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
