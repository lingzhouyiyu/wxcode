/* pages/nk/historytask/historytask.wxss */
.container{
   height: 100%;
   background: #F5F5F5;
}
.logo{
  width: 100%;
  height: 160px;
}

/* 共享view样式*/
.userstyle {
  padding: 25rpx 40rpx;
  background: #ffffff;
  border-width: 0rpx 0rpx 4rpx 0rpx;
  border-style: solid;
  border-color: #F5F5F5;
  display: flex;
  align-items: center;
}

.userTextStyle {
  color: #4a4a4a;
  font-size: 26rpx;
  line-height: 1.42857;
  flex: 1;
}

.righthead:after{

  content: '';
  /*即不把兄弟挤下去 又能设置自己的style  inline不能设置大小 block会挤下去 所以有了inline-block*/
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A3A3A3;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-top: -8rpx;
}