/**index.wxss**/
@import '../common/css/common.wxss';

.person-top{ background: #fff; padding: 40px 0; margin-bottom: 0.6em}
.person-logo{ width: 115px; height: 100px}
.person-tel{ margin-top: 1em; color: #ff9515;}
.person-item{ background: #fff; height: 2.8em; padding: 0 0.6em; border-bottom: 1px solid #f5f5f5;}
.righthead:after{

  content: '';
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A3A3A3;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-top: -8rpx;

}